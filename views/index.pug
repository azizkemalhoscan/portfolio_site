extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1.adjustBackground My works!

      p.lead.text-light
        |This portfolio is prepared to show my works and the concepts that I learned through Le Wagon coding bootcamp and Teamtreehouse tech degree.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3


      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}` width='550' height='550')


